{
  "openapi": "3.0.0",
  "info": {
    "title": "SpiruSwasha",
    "version": "1.0.0",
    "description": "API documentation for SpiruSwasha authentication services"
  },
  "servers": [
    {
      "url": "http://localhost:4000",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/api/auth/regester": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Register a new user",
        "description": "Endpoint for user registration",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "description": "User registration details",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "firstName": {"type": "string", "example": "Admin"},
                  "lastName": {"type": "string", "example": "Admin"},
                  "email": {"type": "string", "example": "Admin1@gmail.com"},
                  "password": {"type": "string", "example": "Admin123"},
                  "phone": {"type": "string", "example": "1231231232"}
                },
                "required": ["firstName", "lastName", "email", "password", "phone"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User registered successfully"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "User login",
        "description": "Endpoint for user authentication",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "description": "User credentials",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {"type": "string", "example": "aaa@gmail.com"},
                  "password": {"type": "string", "example": "123"}
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful"
          }
        }
      }
    },
    "/api/auth/email_vatrfy": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Email verification",
        "description": "Endpoint for initiating email verification",
        "requestBody": {
          "description": "Email to verify",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {"type": "string", "example": "sujal@gmail.com"}
                },
                "required": ["email"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Verification email sent"
          }
        }
      }
    },
    "/api/auth/otp_vatrfy": {
      "post": {
        "tags": ["Authentication"],
        "summary": "OTP verification",
        "description": "Endpoint for OTP verification",
        "requestBody": {
          "description": "OTP verification details",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "otp": {"type": "string", "example": "491846"},
                  "userId": {"type": "string", "example": "68635d920aa2c4f19c2dee88"},
                  "type": {"type": "string", "example": "resetpassword"}
                },
                "required": ["otp", "userId", "type"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OTP verified successfully"
          }
        }
      }
    },
    "/api/auth/resetpassword": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Reset password",
        "description": "Endpoint for password reset",
        "requestBody": {
          "description": "Password reset details",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userId": {"type": "string", "example": "6854d7b195159e862c0d0dfc"},
                  "password": {"type": "string", "example": "admin@123"}
                },
                "required": ["userId", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password reset successful"
          }
        }
      }
    },
    "/api/auth/profile": {
      "get": {
        "tags": ["Authentication"],
        "summary": "Get user profile",
        "description": "Endpoint to retrieve user profile",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "User profile retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "firstName": {"type": "string"},
                    "lastName": {"type": "string"},
                    "email": {"type": "string"},
                    "phone": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/changePssword": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Change password",
        "description": "Endpoint for changing user password",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "description": "Password change details",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "oldPasseword": {"type": "string", "example": "bbb"},
                  "newPasseword": {"type": "string", "example": "123"}
                },
                "required": ["oldPasseword", "newPasseword"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password changed successfully"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "tags": [
    {
      "name": "Authentication",
      "description": "Endpoints for user authentication and management"
    }
  ]
}